<% provide(:title, "Edit User") %>

<div class="content">
  <%= form_with(model: @user, url: user_registration_path, class: "form mx-auto") do |f| %>
    <%= render "users/shared/error_messages", user: @user %>

    <div class="form-group">
      <%= f.text_field :name, class: "form-control", placeholder: "お名前" %>
    </div>

    <div class="form-group">
      <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control", placeholder: "メールアドレス" %>
    </div>

    <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
      <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
    <% end %>

    <div class="form-group">
      <%= f.password_field :password, autocomplete: "new-password", class: "form-control", placeholder: "新しいパスワード(6文字以上)" %>
    </div>

    <div class="form-group">
      <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "form-control", placeholder: "パスワード(確認)" %>
    </div>

    <div class="form-group d-flex flex-start align-items-center">
      <%= f.file_field :profile_image, class: "profile-image-input form-control" %>
      <%= f.label :profile_image, "プロフィール画像", class: "profile-image-label form-label btn btn-primary" %>
      <span class="filename"></span>
    </div>

    <div class="form-group">
      <%= f.password_field :current_password, autocomplete: "current-password", class: "form-control", placeholder: "現在のパスワード" %>
    </div>

    <div class="actions">
      <%= f.submit "更新", class: "btn btn-primary" %>
    </div>
  <% end %>
  <div class="destroy-user-link">
    <%= link_to "退会する", user_registration_path, method: :delete, data: { confirm: "本当に退会しますか？" } %>
  </div>
</div>
