<% provide(:title, @user.name) %>

<h1>Users#show</h1>

<% if @user.profile_image.url %>
  <%= image_tag @user.profile_image.url, class: "profile_image" %>
<% else %>
  <%= image_tag "/uploads/user/profile_image/default_icon.jpg", class: "profile_image" %>
<% end %>

<h2><%= @user.name %></h2>
<h2><%= @user.email %></h2>

<%= link_to "edit your profile", edit_user_registration_path if current_user?(@user) %>
<%= link_to "your rooms", rooms_path %>

<% if @rooms %>
  <h2>your rooms</h2>
  <%= render @rooms %>
<% end %>