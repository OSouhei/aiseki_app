<% provide(:title, @user.name) %>

<div class="wrapper">
  <div class="container mt-5 d-flex justify-content-center">
    <div class="card p-3">
      <div class="d-flex align-items-center">
        <div class="profile-box text-center d-flex flex-direction-column">
          <%= image_tag profile_image_url(@user), class: "profile-image" %>
          <% if current_user? @user %>
            <span class="profile-edit-link"><%= link_to "編集", edit_user_registration_path %></span>
          <% end %>
        </div>
        <div class="user-info-box ml-3 w-100">
          <h4 class="mb-0 mt-0"><%= @user.name %></h4>
          <span><%= @user.email %></span>
          <div class="p-2 mt-2 bg-main d-flex justify-content-between rounded text-white">
            <div class="d-flex flex-column">
              <span class="articles text-white">Rooms</span>
              <span class="number1"><%= @rooms.count %></span>
            </div>
            <div class="d-flex flex-column">
              <span class="followers text-white">Followers</span>
              <span class="number2">980</span>
            </div>
            <div class="d-flex flex-column">
              <span class="rating text-white">Favorite Rooms</span>
              <span class="number3">8</span>
            </div>
          </div>
          <div class="button mt-2 d-flex flex-row align-items-center">
            <button class="btn btn-sm btn-outline-warning w-100 ml-2">Follow</button>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

<% unless @rooms.blank? %>
  <div class="rooms-wrapper text-center">
    <h2>Your Rooms</h2>
    <div class="rooms text-center">
      <%= render @rooms %>
    </div>
  </div>
<% end %>