<div class="card p-3">
  <div class="d-flex align-items-center">
    <div class="profile-box text-center d-flex flex-direction-column">
      <%= link_to user_path(user) do %>
        <%= image_tag profile_image_url(user), class: "profile-image" %>
      <% end %>
      <% if current_user? user %>
        <span class="profile-edit-link"><%= link_to "編集", edit_user_registration_path %></span>
      <% end %>
    </div>
    <div class="user-info-box ml-3 w-100">
      <h4 class="mb-0 mt-0"><%= user.name %></h4>
      <span><%= user.email %></span>
      <div class="p-2 mt-2 bg-main d-flex justify-content-between rounded text-white">
        <div class="d-flex flex-column">
          <span class="articles text-white">Rooms</span>
          <span class="number1"><%= user.rooms.count %></span>
        </div>
        <div class="d-flex flex-column">
          <span class="followers text-white">Followers</span>
          <span class="number2"><%= user.follower.count %></span>
        </div>
        <div class="d-flex flex-column">
          <span class="rating text-white">Favorite Rooms</span>
          <span class="number3"><%= user.bookmarks.count %></span>
        </div>
      </div>
      <% if current_user && !current_user?(user) %>
        <div id="follow-button-<%= user.id %>">
          <%= render 'users/shared/follow_button', user: user %>
        </div>
      <% end %>
    </div>
  </div>
</div>