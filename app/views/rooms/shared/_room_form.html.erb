<%= form_with(model: room, remote: true) do |f| %>
  <%= render 'rooms/shared/error_messages', room: room %>

  <div class="form-group">
    <%= f.label :title, class: "form-label" %>
    <%= f.text_field :title, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= f.label :content, class: "form-label" %>
    <%= f.text_area :content, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= f.label :shop_name, class: "form-label" %>
    <%= f.text_field :shop_name, class: "form-control", id: "room_shop_name" %>
    <ul id="result"></ul>
  </div>

  <div class="form-group">
    <%= f.label :limit, class: "form-label" %>
    <%= f.select :limit, ["no-limit"] + (1..10).to_a, class: "form-control" %>
  </div>

  <div class="actions">
    <%= f.submit "Submit", class: "btn btn-primary" %>
  </div>
<% end %>