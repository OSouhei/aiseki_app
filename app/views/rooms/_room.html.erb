<div class="room card">
  <div class="card-body">
    <div class="room-header d-flex">
      <%= link_to user_path(room.owner) do %>
        <%= image_tag profile_image_url(room.owner), class: "profile-image" %>
      <% end %>
      <h3 class="room-title mx-auto"><%= room.title %></h3>
    </div>
    <div class="room-explanation">
      <p class="card-text"><%= room.content %></p>
    </div>
    <div class="shop-name">
      <p class="card-text"><%= link_to "お店", "#" %></p>
    </div>
    <div class="room-links">
      <%= link_to "見る", room_path(room), class: "card-link text-bright" %>
      <%= link_to "入室", join_room_path(room), class: "card-link text-bright" %>
      <%= link_to "#", class: "card-link book-mark text-bright" do %>
        <svg xmlns="http://www.w3.org/2000/svg" width="25" height="25" fill="currentColor" class="bi bi-bookmark" viewBox="0 0 16 16">
          <path d="M2 2a2 2 0 0 1 2-2h8a2 2 0 0 1 2 2v13.5a.5.5 0 0 1-.777.416L8 13.101l-5.223 2.815A.5.5 0 0 1 2 15.5V2zm2-1a1 1 0 0 0-1 1v12.566l4.723-2.482a.5.5 0 0 1 .554 0L13 14.566V2a1 1 0 0 0-1-1H4z"/>
        </svg>
      <% end %>
    </div>
  </div>
</div>